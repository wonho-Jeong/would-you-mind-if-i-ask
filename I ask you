int add(int one_digit, int two_digit) {
    int sum = one_digit + two_digit;
    return sum;
}
int subtract(int one_digit, int two_digit) {
    int difference = one_digit - two_digit;
    return difference;
}
int multiply(int one_digit, int two_digit) {
    int product = one_digit * two_digit;
    return product;
}

int main() {
    int like_doing = 0;
    int one_digit = 0;
    int two_digit = 0;
    while(1) {
        printf("Calculator Main Menu\n");
        printf("0: Exit\n");
        printf("1: Addition\n");
        printf("2: Subtraction\n");
        printf("3: Multiplication\n");
        printf("Which would you like to do?\n");
        scanf("%d", &like_doing);

        if(like_doing == 0) {
            printf("Bye-bye!");
            break;
        }

        printf("Give 2 values:");
        scanf("%d %d", &one_digit, &two_digit);

        if(like_doing == 1) {
            printf("sum : %d\n", add(one_digit, two_digit));
        } else if(like_doing == 2) {
            printf("difference : %d\n", subtract(one_digit, two_digit));
        } else if(like_doing == 3) {
            printf("product : %d\n", multiply(one_digit, two_digit));
        } else {
            printf("What? What do you want?");
        }
    }
    return 0;
}
